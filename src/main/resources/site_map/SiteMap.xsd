<?xml version="1.0" encoding="UTF-8"?>
<xs:schema  
  targetNamespace="Root"
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  elementFormDefault="qualified"
  xmlns:inf="SiteMapInfo"
  xmlns:inc="IncludeElementsInTest"
  xmlns:itm="MenuItem"
  >  
  <xs:import 
    schemaLocation="file:///C:/Users/SteveBrown/eclipse-workspace/2021/DTest/src/main/resources/site_map/schema/info/SiteMapInfoType.xsd" 
    namespace="SiteMapInfo"/>
  
  <xs:import 
    schemaLocation="file:///C:/Users/SteveBrown/eclipse-workspace/2021/DTest/src/main/resources/site_map/schema/info/IncludeElementsForTestType.xsd" 
    namespace="IncludeElementsInTest"/>
    
  <xs:import 
    schemaLocation="file:///C:/Users/SteveBrown/eclipse-workspace/2021/DTest/src/main/resources/site_map/schema/menu/MenuItemType.xsd" 
    namespace="MenuItem"/>
        
  <xs:element name="SiteMap">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Info" type="inf:SiteMapInfoType" />         
        <xs:element name="IncludeElementsForTest" type="inc:IncludeElementsForTestType" />
                            
        <xs:element name="Modules">
          <xs:complexType>
            <xs:sequence>                        
              <xs:element name="Module" maxOccurs="unbounded">                
                <xs:complexType>
                  <xs:sequence>                                    
                    <xs:element name="Menus">
                      <xs:complexType>
                        <xs:sequence>                                               
                          <xs:element name="Menu">
                            <xs:complexType>
                              <xs:sequence>                            
                                  <xs:element name="MenuItem" type="itm:MenuItemType" maxOccurs="unbounded"/>
                              </xs:sequence>
                              <xs:attribute name="name" type="xs:string"/>
                              <xs:attribute name="package" type="xs:string"/>
                            </xs:complexType>
                          </xs:element>                          
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>                    
                  </xs:sequence>
                  <xs:attribute name="name" type="xs:string"/>
                </xs:complexType>                
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>        
      </xs:sequence>
    </xs:complexType>  
  </xs:element>  
</xs:schema>