<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorinterval="30" status="info" strict="true"> 
  
    <Properties>
        <Property name="logPath">logs</Property>
        <Property name="rollingFileName">site_map</Property>
        
    </Properties>        
    
    <Appenders>
    <!-- 
        <Appender type="Console" name="Console">
            <Layout type="PatternLayout" pattern="%d %p [%t] %m%n" />
        </Appender>
        -->
        <Appender 
        	type="File" 
        	name="SiteMapFile"        	
        	fileName="${sys:logFilePath}">
            <Layout type="PatternLayout" pattern="%d, [%p] %msg; %n" />
        </Appender>
                
        <RollingFile 
        	name="rollingFile" 
        	fileName="${logPath}/${appLogName}.log" 
        	filePattern="${logPath}/${appLogName}_%d{yyyy-MM-dd}.log"
        	append="true">

	        <PatternLayout pattern="%d [%p] [%c{1}] [%M()] - %msg; %n" />
	        <Policies>
	            <OnStartupTriggeringPolicy />
	            <TimeBasedTriggeringPolicy interval="1" modulate="true" />
	        </Policies> 
        </RollingFile>
        
    </Appenders>
    
    <Loggers>    
        <Logger name="TEST_LOGGER" level="FAILED" additivity="false">        
        	<AppenderRef ref="SiteMapFile" />
        </Logger>  
 	        
        <Root level="debug">
            <AppenderRef ref="rollingFile" />
        </Root>         
    </Loggers>
</Configuration>
